<h2>Create a New Session</h2>
<%= form_with model: @session, local: true do |form| %>
  <div>
    <%= form.label :name, "Session Name" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :status, "Status" %>
    <%= form.select :status, options_for_select([['Open', 'open'], ['Closed', 'closed']]) %>
  </div>
  <div>
    <%= form.label :template_id, "Template" %>
    <%= form.collection_select :template_id, @templates, :id, :name %>
  </div>
  <div>
    <%= form.submit "Create Session" %>
  </div>
<% end %>
